<div class="container-fluid position-relative">
    <div class="row">
        <!-- Admin Offcanvas and Side navigation-bar are here -->
        @await Html.PartialAsync("_AdminSidebarPartial")
        <div class="col-lg-9 col-md-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-4 d-flex justify-content-between align-items-center flex-lg-row flex-md-column flex-column gap-2">
                            <div>
                                <h3 class="font-body">Welcome, Admin! What's Cooking🤔</h3>
                                <p class="text-black-50 fw-normal">Here you can manipulate almost anything</p>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-door-open-fill"></i>
                                </a>
                                <a asp-action="Logout" asp-controller="Login" class="primary-icon-btn">
                                    <i class="bi bi-bell-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <!-- Home View -->
                    <div class="col-12">
                        <div class="row">
                            <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                <div class="bg-black rounded-5 p-3 shadow-lg">
                                    <h1 class="display-6 font-body fw-bold text-white">@ViewData["Students"]</h1>
                                    <span class="text-black-50 text-white-50">Total Users</span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                <div class="half-bg-uranian rounded-5 p-3 shadow-lg">
                                    <h1 class="display-6 font-body fw-bold">@ViewData["Faculty"]</h1>
                                    <span class="text-black-50">Total Teachers</span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                <div class="half-bg-uranian rounded-5 p-3 shadow-lg">
                                    <h1 class="display-6 font-body fw-bold">@ViewData["HOD"]</h1>
                                    <span class="text-black-50">Total Head of Department (HOD)</span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                <div class="half-bg-uranian rounded-5 p-3 shadow-lg">
                                    <h1 class="display-6 font-body fw-bold">@ViewData["Labs"]</h1>
                                    <span class="text-black-50">Total Labs</span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                <div class="half-bg-uranian rounded-5 p-3 shadow-lg">
                                    <h1 class="display-6 font-body fw-bold">@ViewData["PC"]</h1>
                                    <span class="text-black-50">Total Computers</span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-12 col-12 mb-4">
                                <div class="half-bg-uranian rounded-5 p-3 shadow-lg">
                                    <h1 class="display-6 font-body fw-bold">@ViewData["Software"]</h1>
                                    <span class="text-black-50">Total Software</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- -->
                </div>
            </div>
        </div>
    </div>
</div>