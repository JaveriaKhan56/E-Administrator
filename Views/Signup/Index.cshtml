<div class="min-vh-100 position-relative secondary-bg d-flex align-items-center justify-content-center py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex align-items-center justify-content-center">
                <div class="bg-white rounded-3 p-5 col-lg-5 col-md-8 col-sm-12 col-12 shadow-lg">
                    <h1 class="fw-bolder font-heading primary-color">Create an Account</h1>
                    <p class="text-black-50">Please provide necessary credentials!</p>
                    <form asp-action="Signup" method="post" asp-controller="Signup" class="d-flex flex-column gap-3">
                        <div class="form-group d-flex flex-column gap-1">
                            <label for="username">Username</label>
                            <input type="text" name="username" class="input-custom" autofocus placeholder="John Doe..." />
                        </div>
                        <div class="form-group d-flex flex-column gap-1">
                            <label for="email">Email Address</label>
                            <input type="email" name="email" class="input-custom" placeholder="johndoe@gmail.com..." />
                        </div>
                        <div class="form-group d-flex flex-column gap-1">
                            <label for="password">Password</label>
                            <input type="password" name="password" class="input-custom fw-bold" autofocus placeholder="*******" />
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-center">
                            <button id="login-button-submit" class="primary-btn col-12 w-100 text-center fw-bolder">SIGNUP</button>
                        </div>
                    </form>
                    <div class="mt-3 text-end">
                        <small class="text-black-50">
                            Already have an account?
                            <a asp-action="Index" asp-controller="Login" class="text-decoration-none primary-color">Click Here</a>
                        </small>
                    </div>
                    <div class="my-3">
                        @if (TempData["SignupError"] != null)
                        {
                            <div class="alert alert-danger d-flex align-items-center gap-3" role="alert">
                                <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                                @TempData["SignupError"]
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Adding Script Section -->
<script src="~/js/login.js"></script>
